{# templates/components/todoitem.html.twig #}
<div class="todoitem card mb-2" draggable="true" ondragstart="onDragStart(event)" id="{{ item.getId() }}" data-status="{{ item.getStatus() }}" data-creation_ts="{{ item.getCreationTs() }}" data-start_ts="{{ item.getStartTs() }}" data-completed_ts="{{ item.getCompletedTs() }}">
    <h5 class="card-header primary-color"><span>[{{ item.getId() }}]</span><span id="{{ item.id }}-title"> {{ item.getTitle() }}</span></h5>
    <div class="card-body">
        <p id="{{ item.id }}-description" class="card-text">{{ item.description }}</p>
        <div class="float-right">
            <button type="button" class="btn btn-outline-primary" data-itemid="{{ item.id }}" style="width: 40px;" data-toggle="modal" data-target="#TodoItemModal">
                <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7.10288 1L9.3221 3.16185L3.21923 9.10694H1V6.94509L7.10288 1Z" stroke="#0085CD" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M1 11.8091H10.9865" stroke="#0085CD" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            <button type="button" class="btn btn-outline-danger" data-itemid="{{ item.id }}" onClick="removeEntity({{ item.getId() }})" style="width: 40px;">
                <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 11.001C8.76142 11.001 11 8.7624 11 6.00098C11 3.23955 8.76142 1.00098 6 1.00098C3.23858 1.00098 1 3.23955 1 6.00098C1 8.7624 3.23858 11.001 6 11.001Z" stroke="#E9545A" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M7.5 4.50098L4.5 7.50098" stroke="#E9545A" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M4.5 4.50098L7.5 7.50098" stroke="#E9545A" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
    </div>
</div>